{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/api/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "100mb",
        "runtime": "python3.11"
      }
    },
    {
      "src": "book/package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "100mb",
        "buildCommand": "npm run build --prefix book"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/api/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "book/build/$1"
    }
  ]
}
